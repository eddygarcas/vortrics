<% @title = "Listing advices" %>

<% content_for :description do %>
<p>Edit this template in <code>app/views/advices/index.html.erb</code>.</p>
<% end %>

<% content_for :actions do %>
<%= link_to new_advice_path, class: 'btn btn-primary btn-large pull-right' do %>
<%= fa_icon_tag "plus" %> Add Advice
<% end %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
              <tr>
                                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @advices.each do |advice| %>
              <tr>
                                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), advice, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_advice_path(advice), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), advice, rel: 'tooltip', title: 'Delete',
                  data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
              <% end %>
              <% if @advices.length == 0 %>
              <tr><td colspan=42 class='text-center'>No advices.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

            <%# Remove the trailing if condition if you're using pagination. %>
      <%= will_paginate @advices if @advices.respond_to?(:total_pages) %>
                </div>
  </div>
</div>
