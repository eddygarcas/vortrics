<style>
  .rickshaw_graph .detail .x_label { display: none }
  .rickshaw_graph .detail .item { line-height: 1.4; padding: 0.5em }
  .detail_swatch { float: right; display: inline-block; width: 10px; height: 10px; margin: 0 4px 0 0 }
  .rickshaw_graph .detail .date { color: #a0a0a0 }
</style>

<div class="panel panel-default">
  <div class="panel-heading ">

    <p class="lead">
      <i class="fa fa-fire"></i><span id="graphtitle">Burndown chart / <%= @sprint.blank? ? " Stories closed by day" : @sprint.name %></span>
    </p>
  </div>

  <div class="panel-body">
    <div id="<%= locals[:graph_id] %>"></div>

    <div id="legend_container">
      <div id="legend"></div>
    </div>
    <div id="x_axis_stories"></div>
    <div id="y_axis_stories"></div>

  </div>
</div>