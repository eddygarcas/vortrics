<%= hidden_field_tag 'teamid', @team.id, id: 'teamid' %>

<div class="panel panel-default">
  <div class="panel-heading ">
    <p class="lead">
      <i class="fa fa-line-chart"></i><span id="graphtitle"><%= locals[:title] %>
      <%= "/ #{@sprint.name}" if @sprint.present? %></span>
    </p>
  </div>

  <div class="panel-body" style="position: relative">
    <div id="<%= locals[:graph_id] %>-y_axis1"></div>
    <div id="<%= locals[:graph_id] %>-y_axis2"></div>

    <div id="<%= locals[:graph_id] %>" style="position: relative;margin-left: 10px;" data-behaviour="<%=locals[:behaviour] %>">
      <div id="<%= locals[:graph_id] %>-loader">
        <i class="fa fa-fw fa-spinner fa-pulse" style="font-size: 18px;"></i>
      </div>
      <div id="<%= locals[:graph_id] %>-legend" class="pull-right"></div>
    </div>
    <div id="<%= locals[:graph_id] %>-x_axis"></div>
    <div style="margin-left: 0px; width: 440px;" id="rangeSlider"></div>
  </div>

</div>
