<div class="panel panel-warning">
  <div class="panel-heading">
    <p class="lead"><%= fa_icon_tag("bug") %> Closed <b>Bugs</b></p>
  </div>
  <div class='panel-body text-orange-400 text-center'>
    <h2 class="m0"><%= sprint.bugs %></h2>
    <small>Closed Bugs this Sprint</small>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-12">
        <%= summary_trend percent(sprint.bugs, @bugs.count), ' in Open Bugs vs Closed', true %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>