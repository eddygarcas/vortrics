<%= form_for(@sprint, html: {class: 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.form_group :team do |f| %>
          <%= f.label :team_id, class: 'control-label col-md-2' %>
          <div class='col-md-8'>
            <%= f.collection_select :team_id, Team.order(:name), :id, :name, include_blank: false, required: true, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :name do |f| %>
          <%= f.label :name, class: 'control-label col-md-2' %>
          <div class='col-md-2'>
            <%= f.text_field :name, required: true, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :enddate do |f| %>
          <%= f.label :enddate, class: 'control-label col-md-2' %>
          <div class='col-md-2' id='sandbox-container'>
            <div class="input-group date">
              <%= f.date_field :enddate, as: :date, value: f.object.try(:strftime, "%m/%d/%Y"), required: true, class: 'form-control' %>
              <span class="input-group-addon">
              <i class="glyphicon glyphicon-th"></i></span>
              </span>

            </div>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :closed_points do |f| %>
          <%= f.label :closed_points, class: 'control-label col-md-2' %>
          <div class='col-md-1'>
            <%= f.number_field :closed_points, required: true, min: 0, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :stories do |f| %>
          <%= f.label :stories, class: 'control-label col-md-2' %>
          <div class='col-md-1'>
            <%= f.number_field :stories, required: true, min: 0, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :bugs do |f| %>
          <%= f.label :bugs, class: 'control-label col-md-2' %>
          <div class='col-md-1'>
            <%= f.number_field :bugs, required: true, min: 0, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :remaining_points do |f| %>
          <%= f.label :remaining_points, class: 'control-label col-md-2' %>
          <div class='col-md-1'>
            <%= f.number_field :remaining_points, required: true, min: 0, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>

      <%= f.form_group :remainingstories do |f| %>
          <%= f.label 'Leftover stories', class: 'control-label col-md-2' %>
          <div class='col-md-1'>
            <%= f.number_field :remainingstories, required: true, min: 0, class: 'form-control' %>
            <%= f.error_messages %>
          </div>
      <% end %>



    </div>

    <div class="form-actions">
      <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to "Cancel", sprints_path, class: 'btn' %>
        </div>
      </div>
    </div>
<% end %>



