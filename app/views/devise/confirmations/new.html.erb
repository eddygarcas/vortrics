<% @title = "Resend confirmation instructions" %>
<div id="main" class='devise'>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <span class="pull-left"><img src="/images/vortrics_name.png" style="margin-left: 12px;margin-top: 12px;height: 110px;"></span>
      </div>
    </div>


    <div class="row mt20">
      <h2 class="p0 m0 mb20 text-center">Resend Account Confirmation Instuctions</h2>
      <%= form_for resource, as: resource_name, url: confirmation_path(resource_name),
                             html: { method: :post, class: "form-horizontal col-xs-12 col-md-6 col-md-offset-3" } do |f| %>
        <%= f.error_notification %>

        <div class="sheet form-sheet form-inputs">
          <div class="sheet-inner">
            <%= f.form_group :email do |f| %>
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "" %>
              <%= f.error_messages %>
            <% end %>
          </div>
        </div>

        <div class="form-actions text-right">
          <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary mr15' %>
        </div>
      <% end %>
    </div>
    <div class="row mt20">
      <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 text-right">
        <ul class="list-unstyled options">
          <li class="col-xs-12"><a href="/users/sign_in">Sign in</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
