<% @title = "Showing workflow" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/workflows/show.html.erb</code>.</p>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner p30">
          <div class="form-horizontal">
            <div class="form-actions col-md-offset-2">
              <%= link_to fa_icon_tag("pencil") + ' Edit', edit_workflow_path(@workflow), class: 'btn btn-primary' %>
              <%= link_to 'Back', workflows_path, class: 'btn' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
