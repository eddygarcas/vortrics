<% @title = "Workflow" %>

<% content_for :description do %>
  <p><%= image_tag "/images/voardtrix_logo.png", class: "img-circle profile-image", height: '30', width: '30' %>
    Workflow for <%= current_user.setting.name %></p>

<% end %>

<br/>
<div class="container-fluid col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="row sheet sheet-condensed">
    <div class="panel panel-default sheet-inner">
      <div class="panel-heading">
        <span class="fa fa-columns"></span>
        Create/Update <%= current_user.setting.name %> workflow
      </div>
      <p class="panel-body">
        <%= render 'form' %>
      </p>
    </div>
  </div>
</div>
