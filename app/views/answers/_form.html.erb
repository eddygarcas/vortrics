
<%= form_for(@answer, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :field_type do |f| %>
      <%= f.label :field_type, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :field_type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :text do |f| %>
      <%= f.label :text, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :text, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :value, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


    <%= f.form_group :question do |f| %>
        <%= f.label :question_id, class: 'control-label col-md-2' %>
        <div class='col-md-8'>
          <%= f.collection_select :question_id, Question.order(:level_id), :id, :question, include_blank: false, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", answers_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

