
<%= form_for(@q_stage, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.form_group :level do |f| %>
        <%= f.label 'Category', class: 'control-label col-md-2' %>
        <div class='col-md-3'>
          <%= f.select :level_id, Level.order(:name).collect { |p| [ p.name, p.id ] }, {required: true}, {class: 'form-control form-control-lg', disabled: f.object.persisted?}%>
          <%= f.error_messages %>
        </div>
    <% end %>

    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :name, class: 'form-control form-control-lg',required: true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :value do |f| %>
      <%= f.label :value, class: 'control-label col-md-2' %>
      <div class='col-md-1'>
        <%= f.number_field :value, class: 'form-control form-control-lg',min: "1", max: "100", placeholder: "1",required: true %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit @title, class: 'btn btn-primary' %>
        <%= link_to "Cancel", q_stages_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

