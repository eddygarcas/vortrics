<% @title = "Maturity Framework" %>

<% content_for :description do %>
  <p><%= image_tag @project_icon.to_s, class: "img-circle profile-image", height: '30', width: '30' %>
    <%= @project_name.to_s %></p>
  <ol class="breadcrumb col-sm-6 col-xs-height text-left col-middle">
    <li><%= link_to "Frameworks", maturity_frameworks_path %></li>
    <li><%= link_to "Categories", levels_path %></li>
    <li><%= link_to "Stages", q_stages_path %></li>
    <li><%= link_to "Questions", questions_path %></li>
  </ol>
<% end %>

<% content_for :actions do %>
    <%= link_to new_q_stage_path, class: 'btn btn-primary btn-large pull-right' do %>
        <%= fa_icon_tag "plus" %> Add a stage
    <% end %>
<% end %>

<%= render "layouts/flashes" %>

<br/>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
            <tr>
              <th>Name</th>
              <th>Value</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @q_stages.each do |q_stage| %>
                <tr>
                  <td><%= q_stage.name %></td>
                  <td><%= q_stage.value %></td>
                  <td class="actions">
                    <%= link_to fa_icon_tag("eye"), q_stage, rel: 'tooltip', title: 'Show' %>
                    <%= link_to fa_icon_tag("pencil"), edit_q_stage_path(q_stage), rel: 'tooltip', title: 'Edit' %>
                    <%= link_to fa_icon_tag("trash-o"), q_stage, rel: 'tooltip', title: 'Delete',
                                data: {confirm: 'Are you sure?'}, method: :delete %>
                  </td>
                </tr>
            <% end %>
            <% if @q_stages.length == 0 %>
                <tr>
                  <td colspan=42 class='text-center'>No q_stages.</td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

      <%# Remove the trailing if condition if you're using pagination. %>
      <%= will_paginate @q_stages if @q_stages.respond_to?(:total_pages) %>
    </div>
  </div>
</div>
