<% @title = "Showing Stage" %>

<% content_for :description do %>
    <p></p>
<% end %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sheet sheet-condensed">
          <div class="sheet-inner p30">
            <div class="form-horizontal">

              <div class="form-inputs">
                <div class="form-group">
                  <label class="col-md-2 control-label">Level</label>
                  <div class="col-md-8">
                    <div class="text-justify">
                        <span>
                          <%= @q_stage.level.name unless @q_stage.level.blank? %>
                        </span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="form-inputs">
                 <div class="form-group">
                    <label class="col-md-2 control-label">Name</label>
                    <div class="col-md-8">
                      <div class="text-justify">
                        <span>
                          <%= @q_stage.name %>
                        </span>
                    </div>
                  </div>
                </div>
              </div>


              <div class="form-inputs">
                 <div class="form-group">
                    <label class="col-md-2 control-label">Value</label>
                    <div class="col-md-8">
                      <div class="text-justify">
                        <span>
                          <%= @q_stage.value %>
                        </span>
                    </div>
                  </div>
                </div>
              </div>


                            <div class="form-actions col-md-offset-2">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_q_stage_path(@q_stage), class: 'btn btn-primary' %>
                <%= link_to 'Back', q_stages_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
