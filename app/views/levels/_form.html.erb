
<%= form_for(@level, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.form_group :maturity_framework do |f| %>
      <%= f.label "Framework", class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.select :maturity_framework_id, MaturityFramework.order(:name).collect { |p| [ p.name, p.id ] } ,{required: true}, {class: 'form-control form-control-lg', disabled: f.object.persisted?} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-6'>
        <%= f.text_field :name, class: 'form-control form-control-lg',required: true %>
        <%= f.error_messages %>
      </div>
    <% end %>


  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", levels_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

