<div class="panel-body clearfix">
  <ul class="nav nav-tabs">
    <li role="presentation" class="dropdown pull-right">
      <%= dropdown_menu "<i class='fa fa-fw fa fa-users'></i> Team #{@team.name}".html_safe do %>
        <% Team.where(:setting_id => current_user.setting.id).each do |team| %>
          <%= activatable_li_tag_with_link (team.avatar.blank? ? '' : image_tag(team.avatar, class: "img-rounded", height: '20', width: '20')) << " #{team.name}", vt_dynamic_link(request.fullpath,team.id) %>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
