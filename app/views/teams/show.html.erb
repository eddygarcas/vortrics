<% @title = "Showing team" %>

<% content_for :description do %>
    <p></p>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner p30">
          <div class="form-horizontal">


            <div class="form-inputs">
              <div class="form-group">
                <label class="col-md-2 control-label"></label>
                <div class="col-md-8">
                  <%= render 'layouts/tmf_panel' %>
                </div>
              </div>
            </div>


            <div class="form-inputs">
              <div class="form-group">
                <label class="col-md-2 control-label">Name</label>
                <div class="col-md-8">
                  <div class="form-control uneditable-input">
                        <span>
                          <%= @team.name %>
                        </span>
                  </div>
                </div>
              </div>
            </div>


            <div class="form-inputs">
              <div class="form-group">
                <label class="col-md-2 control-label">Max capacity</label>
                <div class="col-md-8">
                  <div class="form-control uneditable-input">
                        <span>
                          <%= @team.max_capacity %>
                        </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-md-2 control-label">Current capacity</label>
                <div class="col-md-8">
                  <div class="form-control uneditable-input">
                        <span>
                          <%= @team.current_capacity %>
                        </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-inputs">
              <div class="form-group">
                <label class="col-md-2 control-label">Project</label>
                <div class="col-md-8">
                  <div class="form-control uneditable-input">
                        <span>
                          <%= @team.project %>
                        </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-actions col-md-offset-2">
              <%= link_to fa_icon_tag("pencil") + ' Edit', edit_team_path(@team), class: 'btn btn-primary' %>
              <%= link_to 'Back', teams_path, class: 'btn' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
