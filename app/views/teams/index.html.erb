<% @title = "Manage Team(s)" %>



<% content_for :description do %>

  <p><%= vt_project_icon %>
    Team(s)</p>

<% end %>
<br>

<div class="row">
  <% content_for :actions do %>
      <%= link_to new_team_path, class: 'btn btn-primary btn-large pull-right',data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i>"} do %>
          <%= fa_icon_tag "plus" %> Add Team
      <% end %>
  <% end %>

<div class="container-fluid">
  <%= render "layouts/flashes" %>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
            <tr>
              <th>Project</th>
              <th>Name</th>
              <th>Board</th>
              <th>Process</th>
              <th>Delivery</th>
              <th>Quality</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% current_user.teams.each do |team| %>

                <tr>
                  <td><%= image_tag(team.project_info.blank? ? "/images/voardtrix_logo.png" : team.project_info.icon, class: "img-rounded", height: '24', width: '24', id: 'project_image') %> <%= team.project %></td>
                  <td><%= team.name %></td>
                  <td><%= board team %></td>
                  <td>
                    <%= tmf_stars team.tmf_process %></td>
                  <td><%= tmf_stars team.tmf_value %></td>
                  <td><%= tmf_stars team.tmf_quality %></td>
                  <td class="actions">
                    <%= link_to fa_icon_tag("eye"), get_dashboard_path(team.id), class: "pull-left btn-xs", data: {toggle: :tooltip, title: 'Show metrics', disable_with: "<i class='fa fa-spinner fa-pulse'></i>"} %>
                    <%= link_to fa_icon_tag("trash-o"), team, method: :delete,class: "pull-left btn-xs", data: {toggle: :tooltip, title: 'Delete',confirm: 'Are you sure?'} %>
                  </td>
                </tr>
            <% end %>
            <% if current_user.teams.length == 0 %>
                <tr>
                  <td colspan=42 class='text-center'>No teams.</td>
                </tr>
            <% end %>
            </tbody>

          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

    </div>
  </div>
</div>

