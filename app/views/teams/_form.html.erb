<%= form_for(@team, url: teams_path, method: :post, html: {class: 'form-horizontal form-control-lg'}) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs" style="margin-top: -1px;">

    <%= f.form_group :project do |f| %>
      <%= f.label :project, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= @team.avatar.blank? ? image_tag('/images/voardtrix_logo.png', class: "img-rounded", height: '32', width: '32', id: 'project_image') : image_tag(@team.avatar, class: "img-rounded", height: '32', width: '32', id: 'project_image') %>
        <div class="btn-group">
          <%= f.collection_select :project, project_list, :key, :name, {prompt: 'Select project...', required: true}, {class: 'form-control form-control-lg'} %>
        </div>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :board_id do |f| %>
      <%= f.label :board_id, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.select :board_id, 'Not defined', {prompt: 'Not defined', required: true, disabled: f.object.persisted?}, {class: 'form-control'} %>
        <%= f.error_messages %>
      </div>
      <%= content_tag(:h4, "", class: 'label label-info col-md-1 pull-left',style: "margin-top: 5px;", data: {behaviour: :board_type}).html_safe %>

    <% end %>



    <%= f.form_group :estimated do |f| %>
      <%= f.label :estimated, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select :estimated, jira_field_list(@team.project), {required: true, disabled: f.object.persisted?}, {class: 'form-control form-control-lg'} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :name, {required: true, placeholder: "Team's name", class: 'form-control form-control-lg'} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.hidden_field :setting_id, value: current_user.setting.id %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", teams_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

