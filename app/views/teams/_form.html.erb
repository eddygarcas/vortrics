<%= form_for(@team, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :project do |f| %>
      <%= f.label :project, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= @team.avatar.blank? ? image_tag('/images/voardtrix_logo.png', class: "img-rounded", height: '32', width: '32', id: 'project_image') : image_tag(@team.avatar, class: "img-rounded", height: '32', width: '32', id: 'project_image') %>

        <%= f.select :project, project_list, prompt: 'Select project...', required: true, class: 'form-control form-control-lg', readonly: f.object.persisted? %>
        <%= f.error_messages %>

      </div>
    <% end %>

    <%= f.form_group :board_id do |f| %>
      <%= f.label :board_id, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select :board_id, board_by_team.invert, prompt: 'No defined', required: true, class: 'form-control form-control-lg' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :estimated do |f| %>
      <%= f.label :estimated, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.select :estimated, jira_field_list(@team.project), include_blank: false, prompt: 'No defined', required: true, class: 'form-control form-control-lg', disabled: f.object.persisted? %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :name do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-md-4'>
        <%= f.text_field :name, required: true, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :setting_id do |f| %>
      <%= f.hidden_field :setting_id, value: current_user.setting.id %>
    <% end %>

  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", teams_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

