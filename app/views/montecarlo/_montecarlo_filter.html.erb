
<div class="panel panel-metric">
  <div class="panel-body">
    <div class="metric-content">
      <div class="row">
        <header class="col-xs-12">
          <h3>FILTER</h3>
        </header>

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt15 mb15">

          <div class="form-group col-xs-12">
            <small class="form-label">NUMBER OF SIMULATIONS</small>
            <input type="text" class="form-control add-column-name pull-right" placeholder="1000"/>
          </div>

          <div class="form-group col-xs-12">
            <small class="form-label">BACKLOG LENGTH</small>
            <input type="text" class="form-control add-column-name pull-right" placeholder="500"/>
          </div>

          <div class="form-group col-xs-12">
            <small class="form-label">ITERATION LENGTH</small>
            <%= select_tag 'Iteration lenght', raw("<option>1 week</option><option>2 week</option><option>3 week</option><option>4 week</option>"), class: 'form-control add-column-name' %>
          </div>

          <div class="form-group col-xs-12">
            <small class="form-label">FOCUS</small>
            <input type="text" class="form-control add-column-name pull-right" placeholder="99%"/>
          </div>

          <div class="form-group col-xs-12">

            <%= link_to "Forecast", montecarlo_show_path, class: "btn btn-circle btn-primary pull-right" %>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .add-column-name {
        background: white;
        width: 100%;
        border-radius: 5px;
    }
</style>