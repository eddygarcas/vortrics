<% @title = "Maturity Framework" %>


<% content_for :description do %>
  <p><%= vt_project_icon %>
    <%= vt_project_name %></p>
  <ol class="breadcrumb col-sm-6 col-xs-height text-left col-middle">
    <li><%= link_to "Frameworks", maturity_frameworks_path %></li>
    <li><%= link_to "Categories", levels_path %></li>
    <li><%= link_to "Stages", q_stages_path %></li>
    <li><%= link_to "Questions", questions_path %></li>
  </ol>
<% end %>

<% content_for :actions do %>
  <%= link_to new_maturity_framework_path, class: 'btn btn-primary btn-large pull-right' do %>
    <%= fa_icon_tag "plus" %> Add Maturity framework
  <% end %>
<% end %>

<%= render "layouts/flashes" %>

<br/>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="sheet sheet-condensed">
        <div class="sheet-inner">
          <table class="table">
            <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @maturity_frameworks.each do |maturity_framework| %>
              <tr>
                <td><%= maturity_framework.name %></td>
                <td class="actions">
                  <%= link_to fa_icon_tag("eye"), maturity_framework, rel: 'tooltip', title: 'Show' %>
                  <%= link_to fa_icon_tag("pencil"), edit_maturity_framework_path(maturity_framework), rel: 'tooltip', title: 'Edit' %>
                  <%= link_to fa_icon_tag("trash-o"), maturity_framework, rel: 'tooltip', title: 'Delete',
                              data: { confirm: 'Are you sure?' }, method: :delete %>
                </td>
              </tr>
            <% end %>
            <% if @maturity_frameworks.length == 0 %>
              <tr>
                <td colspan=42 class='text-center'>No maturity_frameworks.</td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.sheet-inner -->
      </div><!-- /.sheet -->

      <%# Remove the trailing if condition if you're using pagination. %>
      <%= will_paginate @maturity_frameworks if @maturity_frameworks.respond_to?(:total_pages) %>
    </div>
  </div>
</div>
