
<%= form_for(@question, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.form_group :q_stage do |f| %>
        <%= f.label 'Stage', class: 'control-label col-md-2' %>
        <div class='col-md-8'>
          <%= f.collection_select :q_stage_id, QStage.order(:name), :id, :name, include_blank: false, class: 'form-control' %>
          <%= f.error_messages %>
        </div>
    <% end %>

    <%= f.form_group :question do |f| %>
      <%= f.label :question, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :question, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :help_text do |f| %>
      <%= f.label :help_text, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <%= f.text_field :help_text, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :allow_comment do |f| %>
      <%= f.label :allow_comment, class: 'control-label col-md-2' %>
      <div class='col-md-8'>
        <label class="switch switch-info pull-right font_small pull-left">
        <%= f.check_box :allow_comment, class: 'form-control',data: {toggle: :tooltip, title: 'Allow comments'} %>
        <%= f.error_messages %>
          <span></span>
        </label>
      </div>
    <% end %>








  </div>

  <div class="form-actions">
    <div class="form-group">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Cancel", questions_path, class: 'btn' %>
      </div>
    </div>
  </div>
<% end %>

