<% @title = "Issue map" %>

<% content_for :description do %>
  <p><%= vt_project_icon %>
    Issue map</p>

<% end %>

<br/>
<div class="container-fluid col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="row sheet sheet-condensed">
    <div class="panel panel-default sheet-inner">
      <div class="panel-heading">
        <span class="fa fa-cog"></span>
        <%= current_user.setting.provider.humanize %> issue mapping
      </div>
      <p class="panel-body">

        <%= form_for(@setting, html: { multipart: true, class: 'form-horizontal' }) do |f| %>
          <%= f.error_notification %>


        <div class="form-inputs">

          <%= f.form_group :board_id do |f| %>
            <%= f.label :board_id, class: 'control-label col-md-2' %>
            <div class='col-md-8'>
              <%= f.select :board_id, fields(@team.project).invert, include_blank: true, prompt: 'No defined', required: true, class: 'form-control form-control-lg' %>
              <%= f.error_messages %>
            </div>
          <% end %>


        </div>

        <div class="form-actions">
          <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <%= f.submit class: 'btn btn-primary' %>
              <%= link_to "Cancel", settings_path, class: 'btn' %>
            </div>
          </div>
        </div>
      <% end %>

      </p>
    </div>
  </div>
</div>